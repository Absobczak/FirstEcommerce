<div class="row">
    <% @products.each do |product| %>
        <div class="col-md-4">
            <div id="text-small", class="well text-center">
                <% if product.image.url.nil? == false %>
                <p><%= image_tag product.image.url, size: 200 %></p>
                <% end %>
                
                <h3><a href="#" data-toggle="modal" data-target="#myModal_<%= product.id %>"><%= product.name %></h3>
                <p><%= number_to_currency product.price %></p>
                
                <p>
                    <a href="#" data-toggle="modal" data-target="#myModal_<%= product.id %>">
                        <span class="glyphicon glyphicon-plus"></span>Quick Info
                    </a>
                </p>
                
            </div>
        </div>
        <div class="modal fade" id="myModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
              </div>
              <div class="modal-body">
                <% if product.image.url.nil? == false %>
                  <p><%= image_tag product.image.url, size: 200 %></p>
                <% end %>
                <h3><%= product.name%></h3>
                <p><%= number_to_currency product.price %></p>
                <p><%= product.description %></p>
                <p><%= product.brand %></p>
              </div>
              <div class="modal-footer">
                <p>
                    <%= form_tag add_to_cart_path do %>
                    <%= hidden_field_tag :product_id, product.id %>
                    <%= number_field_tag :quantity, 1, placeholder: "How Many" %>
                    <%= submit_tag "Add to cart", class: "btn btn-success" %>
                    <% end %>
                </p>
                
                <p>
                  <button type="btn btn-default" data-dismiss="modal">Close</button>
                </p>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    
</div>