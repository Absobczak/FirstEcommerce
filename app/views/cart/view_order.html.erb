<h2>Your Vessel</h2>

<div>
    <table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Delete Item</th>
        </tr>
    </thead>
    
    <tbody>
    <% @line_items.each do |line_item| %>
    <tr>
        
    <td><%= line_item.product.name %></td>
    <td><%= number_to_currency line_item.product.price %></td>
    <td>Quantity: <%= line_item.quantity %></td>
    <td>Subtotal: <%= number_to_currency line_item.line_item_total %></td>
    <td><%= link_to "Remove From Cart", remove_from_cart_path(line_item_id: line_item.id), method: :post, class: "btn btn-danger", data: {confirm: "Are You Sure You Want To Remove This Item"} %></td>
    </tr>
    <% end %>
    </tbody>
    </table>
</div>

<div>
    <%= link_to "Continue Shopping", root_path, class: "btn btn-primary" %>
    <%= link_to "Checkout", checkout_path, class: "btn btn-success" %>
</div>
